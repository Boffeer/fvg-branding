.pop


.g-form-name
	display none

.hero
	height 100vh
	background-image url('../img/content/1-hero/hero-bg.png')
	background-size cover
	background-repeat no-repeat

// @media (max-width 1366px)
// 	.hero
// 		background-position: -250px 0
@media (max-width 1024px)
	.hero
		height 70vh
		background-position: -350px 0

.pop-success_wrap
.hero-modal_wrap
	display none
	align-items center
	justify-content center
	position fixed
	left 0
	top 0
	width 100vw
	height 100vh
	background-color rgba(#000,0.8)
	z-index 100000
.modal-inner
	display flex
	align-items center
	justify-content center
	width 100%
	height 100%


.hero-modal
	position relative
	max-width 600px
	display flex
	flex-direction column
	align-items center
	justify-content center
	padding 62px
	background-color clr-bg--l
	border-radius 16px
	h3
		text-align center
		margin-bottom 26px


.hero-content
	width 526px
	margin-left auto


.header
	display flex
	justify-content space-between
	align-items center
	width 100%
	padding-top 30px
	margin-bottom 65px
.menu
	background-image url('img/content/0-burger/burger-bg.png')
.burger
.menu-burger_close
	border none
	background-color transparent
	size(30px)
	display flex
	flex-direction column
	justify-content space-around
	span
		display block
		background-color #fff
		size(30px, 5px)
.phone-numbers
	a
		color clr-f
		transiton all 0.3s transparent
		&:hover
			color clr-second
			transiton all 0.3s transparent

.offer
	display flex
	flex-direction column
	justify-content center
	align-items center
.headliner
	font-size 36px
	font-weight 900
	line-height 1.2
	text-align center
	span
		display none
.descriptor
	font-size 26px
	font-weight 600
	line-height 1.7
	text-align center
	margin-bottom 26px
.hero-btn
	margin-bottom 68px

.hero-socials
	display flex
	justify-content space-between
	align-items center
	width 347px
.hero-socials_icon
	max-height 48px



.menu_wrap
	display none
	position fixed
	top 0
	left 0
	z-index 10000
	width 100vw
	height 100vh

	// background-color clr-bg--d
	background-image url('../img/content/0-burger/burger-bg.png')
	&:before
		content url('../img/content/0-burger/burger-guy.png')
		position absolute
		z-index 1


.menu_top
.menu_bottom
	display flex
	justify-content space-between
	align-items center

.menu_top
	padding-top 50px
.menu-burger_close
	position relative
	align-self flex-start
.burger-close_left
		position absolute
		transform rotate(45deg)
		top 12px
.burger-close_right
		transform rotate(-45deg)
.menu_bottom
	height 90vh

.menu_contacts
	display flex
	flex-direction column
	align-items flex-start
	justify-content center
	position relative
	z-index 2
	.phone-belarus
		margin-bottom 15px
	.hero-menu_email
		margin-bottom 26px
		padding-left 0 !important
	button
		margin-bottom 26px
		margin-left 50px
.menu_item
	padding-left 50px
	font-size 26px
	color clr-f
	font-weight 400
	&:hover
		color clr-second
	&:before
		top -0.1em
		left -0.2em !important

.menu_nav
	display flex
	flex-direction column
	align-items flex-end
	&-item
		font-size 60px
		font-weight 900
		color clr-f
		line-height 1.5
		border none
		background-color transparent
		&:hover
			color clr-prim

@media (max-width 480px)
	.menu_wrap:before
		position absolute
		left -4rem

	.menu_nav
		position relative
	.menu-burger_close
		margin-top 20px
	.hero
		// background-image linear-gradient(45%, clr-bg--l, clr-bg--d), url('../img/content/1-hero/hero-bg.png')
		background-image linear-gradient(45deg, rgba(clr-bg--d, 0.7), rgba(clr-bg--l, 0.7)), url('../img/content/1-hero/hero-bg.png')
		background-position: -20vw 0
		background-size 380%
		height 100vh
	.header
		margin-bottom 68px
		padding 20px 30px 0
		.hero_callback
			display none
	.menu_top
		padding-left 20px
		padding-right 20px
		padding-top 10px
		margin-bottom 68px
	.menu-logo
		img
			height 70px

	.offer
		max-width 100%
	.hero-content
		width 100%
	.hero-logo
		height 79px
	.descriptor
		line-height 1.4


	.menu_bottom
		display flex
		flex-direction column
		height auto
	.menu_nav
		order -1
		margin-bottom 68px
	.menu_nav-item
		font-size 34px

	.menu_contacts
		align-items center
	.menu_item
		margin-right 26px

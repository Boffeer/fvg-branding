		// &:hover
		// 	color clr-prim
.menu_nav-item:hover{
	color clr-second
	text-shadow: 3px 3px 0 #000f40;
	letter-spacing 6px
	position relative
	transiton all 0.3s 
	z-index 2
	// transition all 0.3s
}
.menu_nav-item:hover:after{
	// transition opacity 0.6s
	
	content: attr(data-shadow);
	position: absolute;
	top: 6px;
	left: 6px;
	width 120%
	right 0;
	z-index: -1;
	text-shadow: none;
	letter-spacing 6px
	background-image:
		linear-gradient(
			45deg,
			transparent 45%,
			hsla(48,20%,90%,1) 45%,
			hsla(48,20%,90%,1) 55%,
			transparent 0
			);
	background-size: 6px 6px;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;

	animation: shad-anim 80s linear infinite;
}
button.menu_nav-item:hover:after{
	left -50px
}



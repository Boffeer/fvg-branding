.factors_guy
	position absolute
	top -4.5rem
	left 45%
	z-index 3

.factors_cape
	position absolute
	top 0
	left 50%
	z-index -1

.factors
	padding-top 90px
	margin-bottom s2x + s2
	background-color clr-bg--d
	position relative
	&:before
			content ''
			background-image url('../img/content/2-7-princip/2t.png')
			background-size cover
			display block
			position absolute
			top -140px
			width 100%
			height 150px
	&-item
		padding s2 0
		display flex
		align-items center
		&-text
			font-size 20px
			max-width 494px
			span
				font-weight 600
				color clr-second
		&__title
			color clr-second
			margin-bottom s1
			font-weight 900
		&__text
			margin-bottom s1
		&__pic
			max-width 60%
			height auto

		&--1
			padding s2 0
			background-color clr-bg--d
			position relative
			&:after
				content ''
				background-image url('../img/content/2-7-princip/2b.png')
				background-size cover
				display block
				position absolute
				bottom -140px
				width 100%
				height 150px
				transform: scale(-1, 1)
			.factors-item-text
				order 3
			img
				margin-right 60px
		&--2
			padding s2x 0
			background-color clr-bg--l
		&--3
			// padding 200px 0
			background-color clr-bg--d
			position relative
			&:before
				content ''
				background-image url('../img/content/2-7-princip/2t.png')
				background-size cover
				transform: scale(-1, 1)
				display block
				object-fit: cover;
				position absolute
				top -100px
				width 100%
				height 100px
			&:after
				content ''
				background-image url('../img/content/2-7-princip/4b.png')
				background-size cover
				display block
				position absolute
				bottom -140px
				width 100%
				height 150px
			.factors-item-text
				order 3
		&--4
			background-color clr-bg--l
			padding s2 0
			img
				width 35%
				margin-bottom s2
		&--5
			// padding-bottom s2
			background-color clr-bg--d
			position relative
			&:before
				content ''
				background-image url('../img/content/2-7-princip/2t.png')
				background-size cover
				display block
				position absolute
				top -140px
				width 100%
				height 150px
			&:after
				content ''
				background-image url('../img/content/2-7-princip/2b.png')
				background-size cover
				display block
				position absolute
				bottom -80px
				width 100%
				height 130px
				transform: scale(-1, 1)
			.factors-item-text
				order 3
			.factors-item__pic
				width 40%

	&-container
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content space-around


@media (max-width 1080px)
	.factors-item__title
		font-size 20px
	.factors-item__text
		font-size 18px
	.factors-item-text
		padding 0 10px
	.factors-item
		img
			max-width 100% !important
			margin-bottom 32px
			min-width 320px
	.factors-item--1
		padding-top 0
		padding-bottom 0
	.factors-item--2
		.principles-container
			flex-direction column-reverse
	.factors-item--2 .factors-item__title
		font-size 19px
			
	.factors-item--4
		padding-top 128px
		padding-bottom 128px
		.principles-container
			flex-direction column-reverse
	.factors-item--5
		padding-top 0

	.factors:before
	.factors-item--3:before
	.factors-item--5:before
		height 40px
		top -40px
	.factors-item--1:after
	.factors-item--3:after
	.factors-item--5:after
		bottom -50px
		height 50px

@media (min-width: 1200px)
	.factors-item-text
		margin-left 80px



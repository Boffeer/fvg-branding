    service-blob(2, 160%, -30%, 15%, 297px)
    service-blob(3, 140%, -20%, 17%, 380px)
    service-blob(4, 170%, -33%, 23%, 198px)
    &:before
      content ''
      background-image url('../img/content/4-services/divider05.png')
      background-size cover
      transform: scale(-1, 1)
      display block
      object-fit: cover;
      position absolute
      bottom -100px
      width 100%
      height 150px
      z-index 2



  &--support

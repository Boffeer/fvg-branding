.work-wrap
	padding 0 0 200px
.work-item
	max-height 220px
	position relative
	&__icon
		margin 0 auto s1
	&__text
		max-width 220px
		text-align center
		margin 0 auto
	&:before
		content ''
		position absolute
		right -40%
		top 50%
		background-color clr-prim
		width 100%
		height 5px
		display block
		z-index -1
		
.work-item--7:before
	background-color transparent
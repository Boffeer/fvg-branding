.founder
	padding-bottom 250px
	.section-title
		font-size 50px
	&-stats
		display flex
	&-bullets
		display flex
		flex-direction column
		flex-wrap wrap
		max-width 650px
		margin-right s2x
	&__bullet
		max-width 351px
		line-height 2
		margin-bottom s1
		position relative
		&:before
			content '+'
			color clr-prim
			font-weight 900
			font-size 25px
			position absolute
			top -10px
			left -26px

.founder-pic
	position absolute
	right -200px
	top -200px
	z-index -1



/* Portrait tablets and small desktops */
@media (min-width: tabletPor) and (max-width: tabletLand)
	.founder-pic
		right -450px

@media (max-width 480px)
	.founder
		padding-bottom 68px
	.founder-stats
		display flex
		flex-direction column
		padding-left 30px
	.founder-pic
		right -520px
		transform rotate(-45deg)
.pop-success_wrap
	.modal-inner
		.hero-modal.hero-callback
			p Данные отправлены, скоро с вами свяжемся

.hero-modal_wrap
	.hero-modal_inner
		form.hero-callback.hero-modal
			button(type="button").modal_close-btn ×
			h3#hero-callback_title Оставьте номер телефона<br>и мы вам перезвоним
			input(name="formname" value='callback').g-form-name
			input(
				type="tel"
				name='tel'
				placeholder="Телефон"
				required).g-input
			button.btn.pop-btn Заказать звонок


.hero-cta-modal_wrap
	.hero-modal_inner
		form.hero-callback.hero-modal
			button(type="button").modal_close-btn ×
			h3 Хотите мы вам перезвоним?
			p.modal-text Оставьте имя и один удобный контакт для связи
			input(name="formname" value='cta').g-form-name
			input(
				type="text"
				name='name'
				placeholder="Имя"
				required).g-input.hero-modal_input--first
			input(
				type="text"
				name='tel'
				placeholder="Телефон или email"
				required).g-input

			button.btn.pop-btn Заказать звонок

			p.modal-text Или свяжитесь с нами в любом удобном мессенджере

			a.modal_phone(href="tel:#{byPhoneLnk}") #{byPhone}

			.hero-socials.hero-socials--pop
				a(href="#{ig}").pop-socials
					+igIcon()
				a(href="#{vk}").pop-socials
					+vkIcon()
				a(href="#{fb}").pop-socials
					+fbIcon()
				a(href="#{tg}").pop-socials
					+tgIcon()
				a(href="#{wa}").pop-socials
					+waIcon()
				a(href="#{vi}").pop-socials
					+viberIcon()


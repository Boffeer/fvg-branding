.menu_wrap
	.container
		.menu
			.menu_top
				a(href="#hero").menu-logo
					picture.menu-logo
						source(
							srcset='static/img/general/fvg-small-logo.svg'
							media='(max-width: 200px)')
						source(
							srcset='static/img/general/fvg-small-logo.svg'
							media='(max-width: 500px)')
						source(
							srcset='static/img/general/fvg-small-logo.svg'
